doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | Youtube   
        link(link rel="stylesheet" href="https://unpkg.com/mvp.css@1.10.2/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul 
                    li 
                        a(href="/") Home
                    if loggedIn
                        li 
                            a(href="/users/logout") Logout
                        li 
                            a(href="/users/edit") Edit Profile
                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    li 
                        a(href="/search") Search
                    li 
                        a(href="/videos/upload") Upload
        main 
            block content
        include partials/footer.pug